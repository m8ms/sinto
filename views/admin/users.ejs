<!DOCTYPE html>
<html>
    <% include ../partials/head %>
    <body>
        <% include ../partials/admin_nav %>

        <h3>Users</h3>
        <table class="table table-striped">
            <thead>
                <% for(var i in user_attributes){ %>
                <th>
                    <%= user_attributes[i] %>
                </th>
                <% } %>
            </thead>
            <% for(var i=0; i<users.length; i++) {%>
            <tr>
                <% for(var key in users[i]){ %>
                    <td><%= users[i][key] %></td>
                <% } %>
            </tr>
            <% } %>
        </table>

        <h3>Add user</h3>
        <form action="/admin/users/add" method="post" role="form" class="form-horizontal">
            <% for(var i in user_attributes){
                var field = user_attributes[i]
            %>
            <div class="form-group">
                <label for="user_<%= field %>" class="control-label col-sm-2"><%= field %></label>
                <div class="col-sm-4">
                    <input id="user_<%= field %>" name="user_<%= field %>" class="form-control"/>
                </div>
            </div>
            <% } %>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Submit</button>
                </div>
            </div>
        </form>
    </body>
</html>
