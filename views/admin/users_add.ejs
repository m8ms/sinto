<!DOCTYPE html>
<html>
<% include ../partials/head %>
<body>
<% include ../partials/admin_nav %>

<h3>Add user</h3>
<div class="flash-msg"><%=message%></div>
<form method="post" role="form" class="form-horizontal">
    <% for(var i in user_attributes){
        var field = user_attributes[i];
        var instance_value = instance_values[i];
        if (field._autoGenerated) continue;
    %>
    <div class="form-group<%=(field.type=='DATE')? ' date':''%>">
        <label for="<%= i %>" class="control-label col-sm-2"><%= i %></label>

        <div class="col-sm-4">
            <%if(field.type =='BOOLEAN'){%>
            <input id="<%= i %>" name="<%= i %>" type="checkbox"/>
            <% }else if(field.type =='DATE'){ %>
            <input id="<%= i %>" name="<%= i %>" class="form-control" data-date-format="yyyy-mm-dd"/>
            <% }else{ %>
            <input id="<%= i %>" name="<%= i %>" class="form-control" value="<%=(typeof instance_value !== undefined)?instance_value:''%>"/>
            <% } %>
        </div>

    </div>
    <% } %>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </div>
</form>
<% include ../partials/script_footer.ejs %>
</body>
</html>
